<config>
  <isis xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-clns-isis-cfg">
   <instances>
    <instance>
     <instance-name>ISIS</instance-name>
     <apply-groups>
      <apply-group>ISIS-P2P</apply-group>
     </apply-groups>
     <running/>
     <overload-bits>
      <overload-bit>
       <level>not-set</level>
       <external-adv-type>external</external-adv-type>
      </overload-bit>
     </overload-bits>
     <is-type>level2</is-type>
     <nets>
      <net>
       <net-name>49.0100.0101.0111.2001.00</net-name>
      </net>
     </nets>
     <distribute/>
     <afs>
      <af>
       <af-name>ipv4</af-name>
       <saf-name>unicast</saf-name>
       <af-data>
        <metric-styles>
         <metric-style>
          <level>not-set</level>
          <style>new-metric-style</style>
         </metric-style>
        </metric-styles>
        <advertise-passive-only/>
        <mpls>
         <level>
          <level2>true</level2>
         </level>
         <router-id>
          <interface-name>Loopback0</interface-name>
         </router-id>
        </mpls>
        <redistributions>
         <redistribution>
          <protocol-name>bgp</protocol-name>
          <bgp>
           <as-xx>0</as-xx>
           <as-yy>65001</as-yy>
           <route-policy-name>RR</route-policy-name>
          </bgp>
         </redistribution>
        </redistributions>
        <segment-routing>
         <mpls>segment-routing</mpls>
        </segment-routing>
       </af-data>
      </af>
     </afs>
     <interfaces>
      <interface>
       <interface-name>Loopback0</interface-name>
       <running/>
       <state>passive</state>
       <interface-afs>
        <interface-af>
         <af-name>ipv4</af-name>
         <saf-name>unicast</saf-name>
         <interface-af-data>
          <running/>
          <prefix-sid>
           <type>absolute</type>
           <value>16112</value>
           <php>enable</php>
           <explicit-null>enable</explicit-null>
           <nflag-clear>disable</nflag-clear>
          </prefix-sid>
         </interface-af-data>
        </interface-af>
       </interface-afs>
      </interface>
      <interface>
       <interface-name>GigabitEthernet0/0/0/0.1112</interface-name>
       <running/>
       <point-to-point/>
       <hello-paddings>
        <hello-padding>
         <level>not-set</level>
         <padding-type>never</padding-type>
        </hello-padding>
       </hello-paddings>
       <hello-passwords>
        <hello-password>
         <level>not-set</level>
         <algorithm>keychain</algorithm>
         <failure-mode>drop</failure-mode>
         <password>CISCO</password>
        </hello-password>
       </hello-passwords>
       <interface-afs>
        <interface-af>
         <af-name>ipv4</af-name>
         <saf-name>unicast</saf-name>
         <interface-af-data>
          <running/>
          <metrics>
           <metric>
            <level>not-set</level>
            <metric>111220</metric>
           </metric>
          </metrics>
         </interface-af-data>
        </interface-af>
       </interface-afs>
      </interface>
      <interface>
       <interface-name>GigabitEthernet0/0/0/0.1212</interface-name>
       <running/>
       <hello-paddings>
        <hello-padding>
         <level>not-set</level>
         <padding-type>never</padding-type>
        </hello-padding>
       </hello-paddings>
       <hello-passwords>
        <hello-password>
         <level>not-set</level>
         <algorithm>keychain</algorithm>
         <failure-mode>drop</failure-mode>
         <password>CISCO</password>
        </hello-password>
       </hello-passwords>
       <interface-afs>
        <interface-af>
         <af-name>ipv4</af-name>
         <saf-name>unicast</saf-name>
         <interface-af-data>
          <running/>
          <metrics>
           <metric>
            <level>not-set</level>
            <metric>12120</metric>
           </metric>
          </metrics>
         </interface-af-data>
        </interface-af>
       </interface-afs>
      </interface>
     </interfaces>
    </instance>
   </instances>
  </isis>
</config
